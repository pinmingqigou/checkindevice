<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/tv_face_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="人脸录入中．．．"
        android:textSize="18sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/face_registration_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="是否使用下图进行注册"
            android:textColor="#22000000"
            android:textSize="14sp" />

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:scaleType="centerCrop"
            app:sriv_border_color="#008fea"
            app:sriv_border_width="2dip"
            app:sriv_left_bottom_corner_radius="48dip"
            app:sriv_left_top_corner_radius="16dip"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="16dip"
            app:sriv_right_top_corner_radius="0dip" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_user_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="70dp"
            android:background="@drawable/shape_face_registration_edittext_bg"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:hint="请输入您的姓名"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_recheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_wifi_info_confirm_button_bg"
                android:text="重新检测" />

            <Button
                android:id="@+id/bt_confirm_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_wifi_info_confirm_button_bg"
                android:text="确认注册" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include
        android:background="#000"
        android:id="@+id/title_bar"
        layout="@layout/title_bar_common_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />
</FrameLayout>